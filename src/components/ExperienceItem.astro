---
interface ExperienceItemProps {
  title: string;
  date: string;
  description: string;
  link?: string;
}
const { title, date, description, link } = Astro.props;
---

<!-- Barra lateral -->
<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900">
</div>

<!-- Tiempo experiencia -->
<time class="mb-1 text-m font-normal leading-none text-[#0a58e9]">
    {date}
</time>

<!-- Nombre Empresa  -->
<h3 class="text-xl font-semibold text-[#0a58e9] mt-2 mb-2">
    {title}
</h3>

<p class="text-lg mb-4 text-pretty ">
    {description}
</p>


